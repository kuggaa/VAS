#!/bin/sh

echo    detecting OS ...
HOST=`$CC -dumpmachine`
case "$HOST" in
  *-*-mingw*|*-*-cygwin*)
    OSTYPE=OSTYPE_WINDOWS
    ;;
  *-*-darwin*)
    OSTYPE=OSTYPE_OS_X
    ;;
  *-*-linux*)
    OSTYPE=OSTYPE_LINUX
    ;;
esac
echo    found $OSTYPE

echo '   Detecting CPU ...'
case "$HOST" in
  i?86-*)
    CPU=CPU_X86
    ;;
  x86_64-*)
    CPU=CPU_X86_64
    ;;
esac
echo    Found $CPU
